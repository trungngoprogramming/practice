<div class="container">
  <table class="table">
    <thead>
      <th><%= t ".title" %></th>
      <th><%= t ".author" %></th>
      <th><%= t ".setting" %></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title.capitalize %></td>
          <td><%= post.user.name %></td>
          <td><%= link_to t(".detail"), post_path(post) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @posts %>
</div>
